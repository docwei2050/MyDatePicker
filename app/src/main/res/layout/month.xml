<?xml version="1.0" encoding="utf-8"?>

<com.docwei.datepicker.timesquare.MonthView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
  <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/calendar_month_topmargin"
      android:layout_marginBottom="@dimen/calendar_month_title_bottommargin"
      android:gravity="center_horizontal"
      android:textColor="#ffffff"
      style="@style/CalendarTitle"
      />
  <com.docwei.datepicker.timesquare.CalendarGridView
      android:background="#551abc9c"
      android:id="@+id/calendar_grid"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
<!--每行星期-->
    <com.docwei.datepicker.timesquare.CalendarRowView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/calendar_day_headers_paddingbottom"
        >
      <TextView
          android:background="#F65100"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/CalendarCell.DayHeader"
          />
      <TextView
          android:background="#F65100"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/CalendarCell.DayHeader"
          />
      <TextView
          android:background="#F65100"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/CalendarCell.DayHeader"
          />
      <TextView
          android:background="#F65100"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/CalendarCell.DayHeader"
          />
      <TextView
          android:background="#F65100"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/CalendarCell.DayHeader"
          />
      <TextView
          android:background="#F65100"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/CalendarCell.DayHeader"
          />
      <TextView
          android:background="#F65100"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/CalendarCell.DayHeader"
          />
    </com.docwei.datepicker.timesquare.CalendarRowView>
     <include layout="@layout/week"/>
      <include layout="@layout/week"/>
      <include layout="@layout/week"/>
      <include layout="@layout/week"/>
      <include layout="@layout/week"/>
      <include layout="@layout/week"/>
  </com.docwei.datepicker.timesquare.CalendarGridView>
</com.docwei.datepicker.timesquare.MonthView>